# GitHub OAuth Configuration
# Create a GitHub OAuth App at https://github.com/settings/applications/new
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here
GITHUB_CALLBACK_URL=http://localhost:8080/auth/github/callback

# Application Configuration
NODE_ENV=development
PORT=8080
HOST=0.0.0.0
CORS_ORIGIN=http://localhost:3000,http://localhost:8080

# Database Configuration
# PostgreSQL connection string
DATABASE_URL=postgresql://postgres:github_agent_pass@localhost:5432/github_dev_agent
DB_HOST=localhost
DB_PORT=5432
DB_NAME=github_dev_agent
DB_USER=postgres
DB_PASSWORD=github_agent_pass
DB_SSL=false

# Redis Configuration
# Redis connection for caching and sessions
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=github_redis_pass
REDIS_DB=0

# Security Configuration
# Generate secure random keys for production
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters
ENCRYPTION_KEY=your_encryption_key_here_exactly_32_characters
SESSION_SECRET=your_session_secret_here_minimum_32_chars

# MCP (Model Context Protocol) Configuration
MCP_ENABLED=true
MCP_PLAYWRIGHT=true
MCP_CONTEXT_PORTAL=true
MCP_MEMORY_KEEPER=true
MCP_SERVER_URL=http://localhost:8081
MCP_API_KEY=your_mcp_api_key_here

# AI Service Configuration
# Pollinations AI API (free tier)
POLLINATIONS_API_URL=https://text.pollinations.ai/
POLLINATIONS_API_KEY=optional_api_key_for_premium

# OpenAI Configuration (optional)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id_here
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic Configuration (optional)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,text/plain,application/json
UPLOAD_DEST=./uploads

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_specific_password
SMTP_FROM=noreply@github-dev-agent.com

# Monitoring & Analytics
MONITORING_ENABLED=false
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
SENTRY_DSN=your_sentry_dsn_here

# Development Configuration
DEBUG=github-dev-agent:*
DEV_SERVER_PORT=3000
HOT_RELOAD=true

# Production Configuration
# Set these in production environment
# HTTPS_ENABLED=true
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/key.pem
# DOMAIN=your-domain.com

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_KEYS=1000
CACHE_ENABLED=true

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=100
WS_TIMEOUT=60000

# GitHub API Configuration
GITHUB_API_URL=https://api.github.com
GITHUB_RAW_URL=https://raw.githubusercontent.com
GITHUB_UPLOAD_URL=https://uploads.github.com
GITHUB_USER_AGENT=GitHub-Dev-Agent/1.0.0

# Feature Flags
FEATURE_AUTONOMOUS_MODE=true
FEATURE_ADVANCED_CODING=true
FEATURE_TASK_PLANNING=true
FEATURE_CODE_GENERATION=true
FEATURE_REPOSITORY_ANALYSIS=true
